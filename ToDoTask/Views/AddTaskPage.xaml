<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:ToDoTask.ViewModel"
             x:Class="ToDoTask.Views.AddTaskPage" >
    
    <ContentPage.BindingContext>
        <viewModel:MainViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout Spacing="10" Padding="20">
        <Label Text="Title" FontSize="Medium" VerticalOptions="Center" Margin="10, 0" />
        <Entry Text="{Binding CurrentTitle}" Placeholder="Enter task title"  />

        <Label Text="Description" FontSize="Medium" VerticalOptions="Center" Margin="10, 0"/>
        <Editor Text="{Binding CurrentDescription}" Placeholder="Enter task description" AutoSize="TextChanges"/>

        <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="CenterAndExpand">
            <Label Text="Priority:" VerticalOptions="CenterAndExpand"/>
            <Picker ItemsSource="{Binding Priorities}" SelectedItem="{Binding CurrentPriority}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        
        <Button Text="Add Task" Command="{Binding AddItemCommand}" VerticalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>